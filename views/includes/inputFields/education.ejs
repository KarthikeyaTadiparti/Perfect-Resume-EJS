<div id="accordion-collapse-2" data-accordion="collapse" class="mt-5">
    <h2 id="accordion-collapse-heading-2">
        <button
            type="button"
            class="z-1 flex items-center justify-between bg-white w-full p-5 font-medium rtl:text-right text-gray-800 border border-gray-200 rounded-xl hover:bg-gray-100 gap-3"
            data-accordion-target="#accordion-collapse-body-2"
            aria-expanded="true"
            aria-controls="accordion-collapse-body-2"
        >
            <span>Education</span>
            <svg
                data-accordion-icon
                class="w-3 h-3 rotate-180 shrink-0"
                aria-hidden="true"
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 10 6"
            >
                <path
                    stroke="currentColor"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 5 5 1 1 5"
                />
            </svg>
        </button>
    </h2>
    <div
        id="accordion-collapse-body-2"
        class="hidden relative -top-3"
        aria-labelledby="accordion-collapse-heading-2"
    >
        <div class="p-5 border border-t-0 bg-white border-gray-200">
            <!-- Container for all education sections -->
            <div id="education-container">
                <!-- Single education section -->
                <div class="education-section mb-4 border-b pb-4">
                    <div class="flex gap-4">
                        <div class="w-full max-w-sm min-w-[200px] mt-4">
                            <label
                                for="institution"
                                class="block mb-2 text-sm text-slate-600"
                            >
                                Institution Name
                            </label>
                            <input
                                type="text"
                                class="institution inputFields"
                                name="institution"
                                placeholder="Enter institution name"
                                oninput="updatePreview()"
                            />
                        </div>
                        <div class="w-full max-w-sm min-w-[200px] mt-4">
                            <label
                                for="field"
                                class="block mb-2 text-sm text-slate-600"
                            >
                                Field of Study
                            </label>
                            <input
                                type="text"
                                class="field inputFields"
                                name="field"
                                placeholder="Enter field of study"
                                oninput="updatePreview()"
                            />
                        </div>
                    </div>

                    <div class="flex gap-4">
                        <div class="w-full max-w-sm min-w-[200px] mt-2">
                            <label
                                for="degree"
                                class="block mb-2 text-sm text-slate-600"
                            >
                                Degree
                            </label>
                            <input
                                type="text"
                                class="degree inputFields"
                                name="degree"
                                placeholder="Enter degree"
                                oninput="updatePreview()"
                            />
                        </div>
                        <div class="w-full max-w-sm min-w-[200px] mt-2">
                            <label
                                for="percentage"
                                class="block mb-2 text-sm text-slate-600"
                            >
                                Percentage
                            </label>
                            <input
                                type="text"
                                class="percentage inputFields"
                                name="percentage"
                                placeholder="Enter percentage"
                                oninput="updatePreview()"
                            />
                        </div>
                    </div>

                    <div class="flex gap-4">
                        <div class="w-full max-w-sm min-w-[200px] mt-2">
                            <label
                                for="from"
                                class="block mb-2 text-sm text-slate-600"
                            >
                                From
                            </label>
                            <input
                                type="number"
                                class="from inputFields"
                                name="from"
                                placeholder="Year (e.g., 2020)"
                                oninput="updatePreview()"
                            />
                        </div>
                        <div class="w-full max-w-sm min-w-[200px] mt-2">
                            <label
                                for="to"
                                class="block mb-2 text-sm text-slate-600"
                            >
                                To
                            </label>
                            <input
                                type="number"
                                class="to inputFields"
                                name="to"
                                placeholder="Year (e.g., 2024)"
                                oninput="updatePreview()"
                            />
                        </div>
                    </div>
                </div>
            </div>

            <!-- Add button -->
            <div class="mt-4">
                <button
                    type="button"
                    class="bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600"
                    onclick="addEducationSection()"
                >
                    Add Another Education
                </button>
            </div>
        </div>
    </div>
</div>
